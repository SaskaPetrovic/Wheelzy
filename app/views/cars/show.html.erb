<div class="container mt-4">
  <%= link_to "View All cars", cars_path, class: "btn btn-custom mb-4" %>

  <div class="row">
    <h3 class="my-2"><%= @car.brand %> <%= @car.model %></h3>
    <h5 class="my-2"><%= @car.address %></h5>
    <div class="col-md-8">
      <%= image_tag @car.image, class: 'card-img-top mx-auto d-block mb-4', alt: 'car image', style: 'width: 100%; height: 600px; object-fit: cover; border-radius: 10px;' %>

      <div class="d-flex justify-content-between mt-4">
        <div class="d-flex align-items-center">
          <%= image_tag "icons/date.png", class: "icon mb-3", style: 'height: 40px;' %>
          <p class="card-text-show pl-2"><%= @car.year_of_production %></p>
        </div>
        <div class="d-flex align-items-center">
          <%= image_tag "icons/price.png", class: "icon mb-3", style: 'height: 40px;' %>
          <p class="card-text-show pl-2"><%= number_to_currency(@car.price_per_day, unit: "â‚¬", precision: 0) %></p>
        </div>
        <div class="d-flex align-items-center">
          <%= image_tag "icons/star.png", class: "icon mb-3", style: 'height: 40px;' %>
          <p class="card-text-show pl-2"><%= @car.rating %></p>
        </div>
      </div>

      <div class="text-center my-5">
        <div class="border border-primary mx-auto" style="width: 10%;"></div>
      </div>

      <p class="card-title-show-desc mb-4">Experience the Comfort and Elegance of Our car</p>
      <p class="card-text-show-desc mb-4 "></p>
    </div>

    <div class="col-md-4 d-flex">
      <div class="w-100 ms-md-4">
        <h3 class="text-left">Rent this car</h3>

        <div class="form-wrapper mt-4">
          <% if @renting.errors.any? %>
            <div class="alert alert-danger">
              <h4>Errors:</h4>
              <ul>
                <% @renting.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= render 'rentings/form', car: @car, renting: @renting %>
        </div>
      </div>
    </div>
  </div>
</div>
