<div class="container my-5">
  <!-- Header -->
  <div class="text-center mb-4 ">
      <h1 class="display-4 padding-title">CarDeals</h1>
      <h2>Big cars for Little Price</h2>
      <p class="padding">Discover unbeatable value with carDeals! We offer a wide range of high-quality cars at affordable prices, so you can enjoy luxury and comfort without breaking the bank. Explore our exclusive deals and start your next adventure today!</p>
  </div>



  <!-- Border and 'Top Rated' Section -->
  <div class="text-center mb-4">
    <div class="border border-primary mx-auto" style="width: 50%;"></div>
  </div>

  <div class="text-center my-5">
    <h2>Top Rated</h2>
  </div>


<div class="row">
  <% @cars.each do |car| %>
    <div class="col-md-3 mb-4">
      <%= link_to car_path(car), class: 'card-link' do %>
          <img src="<%= asset_path(car.image) %>" class="card-img-top" alt="car image" style="border-radius: 10px;">
          <div class="card-body mx-1">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="card-title my-2"><%= car.brand %> <%= car.model %></h5>
              <div class="rating">
                <%= image_tag "icons/star.png", style: "height: 15px;", class: "mb-1"%>
                <%= car.rating %>
              </div>
            </div>
            <p class="card-text">
              Price per Day:<%= number_to_currency(car.price_per_day, unit: " â‚¬", precision: 0) %><br>
            </p>
            <div class="text-center mb-4">
              <div class="border border-primary mx-auto" style="width: 10%;"></div>
            </div>
          </div>
      <% end %>
    </div>
  <% end %>
</div>



  <div class="text-center mt-4">
    <%= link_to "View all cars", cars_path, class: "btn btn-custom" %>
  </div>
