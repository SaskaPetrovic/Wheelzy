<%= simple_form_for [@car, @renting], url: car_rentings_path(@car), local: true do |f| %>
  <div data-controller="flatpickr">
    <div class="form-group">
      <%= f.input :start_at, as: :string, input_html: { class: 'form-control', data: {  target: 'flatpickr.startInput'} } %>
    </div>
    <div class="form-group">
      <%= f.input :end_at, as: :string, input_html: { class: 'form-control', data: {  target: 'flatpickr.endInput' } } %>
    </div>
    <div class="text-left">
      <%= f.submit "Rent now", class: "btn btn-custom mt-2" %>
    </div>
  </div>
<% end %>
</div>
